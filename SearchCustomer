    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
       try {
    String id = custid.getText().trim(); // Trim spaces from input

    // Check if input is empty
    if (id.isEmpty()) {
        JOptionPane.showMessageDialog(null, "Please enter a Customer ID");
        return;
    }

    Class.forName("com.mysql.cj.jdbc.Driver");
    Connection con = DriverManager.getConnection("jdbc:mysql://localhost/airline_project", "root", "sulekha_02");
    PreparedStatement pre = con.prepareStatement("SELECT * FROM customer WHERE CustomerID = ?");
    pre.setString(1, id);

    ResultSet rs = pre.executeQuery();

    if (rs.next()) {
        // Populate fields with database data
        fname.setText(rs.getString("FirstNAme")); // Ensure column name matches your database
        pno.setText(rs.getString("PassportNo"));
        address.setText(rs.getString("Address"));
        nic.setText(rs.getString("NationalID"));
        contact.setText(rs.getString("Contact"));

        // Set gender selection
        if ("Male".equalsIgnoreCase(rs.getString("Gender"))) {
            male.setSelected(true);
        } else if ("Female".equalsIgnoreCase(rs.getString("Gender"))) {
            female.setSelected(true);
        }
    } else {
        // Show message if customer is not found
        JOptionPane.showMessageDialog(null, "Customer Not Found");
    }

    // Close resources
    rs.close();
    pre.close();
    con.close();

} catch (ClassNotFoundException ex) {
    Logger.getLogger(SearchCustomer.class.getName()).log(Level.SEVERE, null, ex);
} catch (SQLException ex) {
    Logger.getLogger(SearchCustomer.class.getName()).log(Level.SEVERE, null, ex);
}

                                            
       
    }                                        


